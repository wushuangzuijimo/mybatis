<?xml version="1.0" encoding="UTF-8" ?>
		<!DOCTYPE mapper
		 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.woniu.domain.EmpMapper">



	<insert id="save" parameterType="com.woniu.domain.Emp">

		insert into emp
		values(null,#{ename},#{birthday},#{money})

	</insert>
	<delete id="delete" parameterType="int">

		delete
		from emp where
		eid=#{eid}

	</delete>

	<update id="update" parameterType="com.woniu.domain.Emp">

		update emp set
		ename=#{ename},birthday=#{birthday},money=#{money}


	</update>
	<select id="findall" resultType="com.woniu.domain.Emp">

		select * from emp


	</select>

	<select id="findone"   resultType="com.woniu.domain.Emp"
	parameterType="int"	>

		select * from emp where eid = #{eid}

	</select>



</mapper>